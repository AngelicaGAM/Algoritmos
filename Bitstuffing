            int ban=0;
		for (int j=i;j<=(i+5);j++) {
			if(str[j]=='1') {
				ban++;
			}
		}
		
		if(ban==6) {
		  int nl=strlen(str)+2;
		   for (;nl>=(i+5);nl--)
                        {
			str[nl]=str[nl-1];
			}
