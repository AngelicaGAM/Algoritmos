int main( ) {
     int tablero[8][8];
     int Dx, Dy;
    for (int y = 0; y < 8; y++) {
            for (int x = 0; x < 8; x++) {
                if (y == 0 || y % 2 == 0) {
                    if (x == 0 || x % 2 == 0) {
                      //  tablero[y][x].setColor('n');
                        tablero[y][x]='b';
                    }
                    else {
                       // tablero[y][x].setColor('b');
                        //printf("b",tablero[y][x]);
                        tablero[y][x]='n';
                    }
                }
                else {
                    if (x == 0 || x % 2 == 0) {
                      //  tablero[y][x].setColor('b');
                          tablero[y][x]='n';
                    }
                    else {
                        //tablero[y][x].setColor('n');
                         tablero[y][x]='b';
                    }
                }
            }
        }
     tablero[3][0]='r';
     tablero[3][7]='R';
    
     for(int y = 0; y < 8; y++) {
           printf("\n");
         for(int x = 0; x < 8; x++) {
            printf(" %c ",tablero[x][y]); 
        }
     }
     
     
     
       int t=1;
     // lo mismo x original, y original, x destino, y destino, turno, color original 
       Rey(tablero,3,0,4,0,t,1);       
     
         for(int y = 0; y < 8; y++) {
           printf("\n");
             for(int x = 0; x < 8; x++) {
            printf(" %c ",tablero[x][y]); 
            }
             }
    return 0;
}


int Rey(int tablero[8][8],int Actualx, int Actualy, int Mx, int My, int turno, int color){
    //Turno
    int t=turno;
    //Movimientos Actuales
    int eq=Actualx,yi=Actualy;
    //Movimientos Destino
    int Dx=Mx, Dy=My;
    
    printf("Turno :%d\n",t);
       
    //VALIDACIONES 
      // Todos  los mov deben ser menores a 8 y mayor a 0
     if( (Dx < 8 && Dx >= 0) || (Dy < 8 && Dy >= 0 ) ){
         // SÃ­ la pieza si es un Rey No importa el color
         
         if((tablero[eq][yi]=='R') || (tablero[eq][yi]=='r')) {   
                       // si la ubicacion destino esta disponible la pieza 
                if((tablero[Dx][Dy]=='n') || (tablero[Dx][Dy]=='b')){

             //Turno 1 
         if(t==1){
              // 
             if(color==1){
             tablero[eq][yi]='n';  
             }
             else if(color==2){
             tablero[eq][yi]='b';  
             }
            // Posibles movimientos 8 
             // Para blancos C 
             if( (Dx==eq-1) && (Dy==yi-1) ){ 
                tablero[Dx][Dy]='r';  
             }
             else if( (Dx==eq-1) && (Dy==yi) ){ 
                tablero[Dx][Dy]='r';  
             }
             
             else if( (Dx==eq-1) && (Dy==yi+1) ){ 
                tablero[Dx][Dy]='r';  
             }
             
             else if( (Dx==eq) && (Dy==yi-1) ){ 
                tablero[Dx][Dy]='r';  
             }
             
             else if( (Dx==eq) && (Dy==yi+1) ){ 
                tablero[Dx][Dy]='r';  
             }
             
             else if( (Dx==eq+1) && (Dy==yi-1) ){ 
                tablero[Dx][Dy]='r';  
             }
             
             else if( (Dx==eq+1) && (Dy==yi) ){ 
                tablero[Dx][Dy]='r';  
             }
             
             else if( (Dx==eq+1) && (Dy==yi+1) ){ 
                tablero[Dx][Dy]='r';  
             }
                }
         else if(turno==2){
          // 
             if(color==1){
             tablero[eq][yi]='n';  
             }
             else if(color==2){
             tablero[eq][yi]='b';  
             }
            // Posibles movimientos 8 
             // Para blancos C 
             if( (Dx==eq-1) && (Dy==yi-1) ){ 
                tablero[Dx][Dy]='R';  
             }
             else if( (Dx==eq-1) && (Dy==yi) ){ 
                tablero[Dx][Dy]='R';  
             }
             
             else if( (Dx==eq-1) && (Dy==yi+1) ){ 
                tablero[Dx][Dy]='R';  
             }
             
             else if( (Dx==eq) && (Dy==yi-1) ){ 
                tablero[Dx][Dy]='R';  
             }
             
             else if( (Dx==eq) && (Dy==yi+1) ){ 
                tablero[Dx][Dy]='R';  
             }
             
             else if( (Dx==eq+1) && (Dy==yi-1) ){ 
                tablero[Dx][Dy]='R';  
             }
             
             else if( (Dx==eq+1) && (Dy==yi) ){ 
                tablero[Dx][Dy]='R';  
             }
             
             else if( (Dx==eq+1) && (Dy==yi+1) ){ 
                tablero[Dx][Dy]='R';  
             }
         
         }
         
                
                
                }
         }
     }
}
